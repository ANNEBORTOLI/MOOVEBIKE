<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="/img/favicon96.png">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/adminRentalsUsers.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Uchen&display=swap" rel="stylesheet" />
  <title>Planos Ativos</title>
</head>

<body class="container">

  <header class="d-flex justify-content-center">
    <a class="container" href="/"><img src="/img/logo.png" alt="logo"></a>
  </header>

  <main>

    <h2 class="container">PACOTES ATIVOS</h2>
    <div class="container">
      <div class="d-flex flex-direction-row">
        <div class="form-inline mr-auto">
          <div>
            <button class="btn btn-warning mb-4">
              <a style="text-decoration:none; color: black;" href="/admin">Voltar</a>
            </button>
          </div>
          <div class="form-group mb-2">
            <input id="search" type="text" class="form-control mr2" placeholder="Usuario" />
          </div>
        </div>
      </div>

      <nav aria-label="...">
        <ul class="pagination pagination-sm">
          <% for (let pageNumber=1; pageNumber <=pageTotal; pageNumber++) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%=pageNumber%>">
                <%=pageNumber%>
              </a>
            </li>
            <% } %>
      </nav>

      <table class="table text-center align-itens-center table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Usuário</th>
            <th>E-mail</th>
            <th>Pacote</th>
            <th>Preço</th>
            <th>Período</th>
            <th>Bike Elétrica</th>
            <th>Retirada</th>
            <th>Devolução</th>
            <th>Desativar</th>
          </tr>
        </thead>
        <tbody>
          <% rentals.forEach((rental)=> { %>
            <tr>
              <td>
                <%=rental.id%>
              </td>
              <td>
                <%=rental.user_name%>
              </td>
              <td>
                <%=rental.email%>
              </td>
              <td>
                <%=rental.pack_name%>
              </td>
              <td>
                <%=rental.pack_price%>
              </td>
              <td>
                <%=rental.pack_period%>
              </td>
              <td>
                <%=rental.electric%>
              </td>
              <td>
                <%=rental.pick_up%>
              </td>
              <td>
                <%=rental.drop_off%>
              </td>
              <td>
                <form method="POST" action="/admin/rentals/active/<%=rental.id%>/desactivate?_method=PATCH">
                  <button class="btn btn-sm btn-danger" tooltip="Desativar">
                    <i class="fas fa-power-off"></i>
                  </button>
                </form>
              </td>
              <% }) %>
            </tr>
        </tbody>
      </table>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
    crossorigin="anonymous"></script>
  <script src="/js/scriptplus.js"></script>
</body>

</html>